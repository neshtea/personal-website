---
import Layout from "../../layouts/Layout.astro";
import { translations } from "../../i18n/translations";

const t = translations.en;
---

<Layout title={`${t.about.title} - Marco Schneider`} lang="en">
  <article class="max-w-3xl">
    <h1 class="text-4xl md:text-5xl font-display font-bold mb-12">
      {t.about.title}
    </h1>

    <div
      class="prose prose-invert max-w-none space-y-6 text-text-muted text-lg leading-relaxed"
    >
      <p>
        Write your bio here. Talk about your background, education, current
        work, and interests.
      </p>

      <p>
        Share what drives you, your philosophy, or your approach to your work.
      </p>

      <p>Include any other relevant information about yourself.</p>
    </div>

    <h2 class="text-2xl font-display font-bold mt-16 mb-6">
      {t.about.interests}
    </h2>
    <p class="text-text-muted text-lg leading-relaxed">
      List your professional and personal interests here.
    </p>
  </article>
</Layout>
