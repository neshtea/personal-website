---
import { translations, type Locale } from "../i18n/translations";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
  lang: Locale;
}

const { title, description = "Personal website and blog", lang } = Astro.props;
const t = translations[lang];
const currentPath = Astro.url.pathname;

// Determine alternate language URL
const otherLang = lang === "de" ? "en" : "de";
const alternatePath = currentPath.replace(`/${lang}`, `/${otherLang}`);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="fediverse:creator" content="@anarres@chaos.social" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed"
      href={`/rss-${lang}.xml`}
    />
    <link rel="alternate" hreflang={otherLang} href={alternatePath} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background text-text antialiased">
    <div class="min-h-screen">
      <!-- Header with language switcher -->
      <Header lang={lang} currentPath={currentPath} translations={t} />

      <!-- Main content -->
      <main class="max-w-5xl mx-auto px-6 py-16">
        <slot />
      </main>

      <!-- Footer -->
      <Footer rssLabel={t.footer.rss} />
      <a class="hidden" rel="me" href="https://chaos.social/@anarres"
        >Mastodon</a
      >
    </div>
  </body>
</html>
