---
const { lang, currentPath, translations } = Astro.props;
---

<header
  class="border-b border-surface sticky top-0 bg-background/95 backdrop-blur-sm z-10"
>
  <div class="max-w-5xl mx-auto px-6 py-6">
    <nav class="flex items-center justify-between">
      <a
        href={`/${lang}`}
        class="text-xl font-display font-bold text-text hover:text-accent transition-colors"
      >
        Marco Schneider
      </a>

      <div class="flex items-center gap-8">
        <ul class="flex gap-6 text-sm font-medium">
          <li>
            <a
              href={`/${lang}/about`}
              class={`hover:text-accent transition-colors ${currentPath.includes("/about") ? "text-accent" : "text-text-muted"}`}
            >
              {translations.nav.about}
            </a>
          </li>
          <li>
            <a
              href={`/${lang}/publications`}
              class={`hover:text-accent transition-colors ${currentPath.includes("/publications") ? "text-accent" : "text-text-muted"}`}
            >
              {translations.nav.publications}
            </a>
          </li>
          <li>
            <a
              href={`/${lang}/blog`}
              class={`hover:text-accent transition-colors ${currentPath.includes("/blog") ? "text-accent" : "text-text-muted"}`}
            >
              {translations.nav.blog}
            </a>
          </li>
          <li>
            <a
              href={`/${lang}/contact`}
              class={`hover:text-accent transition-colors ${currentPath.includes("/contact") ? "text-accent" : "text-text-muted"}`}
            >
              {translations.nav.contact}
            </a>
          </li>
        </ul>

        <!-- Language switcher -->
        <div class="flex gap-2 text-sm border-l border-surface pl-6">
          <a
            href={currentPath.replace(`/${lang}`, "/de")}
            class={`px-2 py-1 rounded transition-colors ${lang === "de" ? "bg-accent text-background" : "text-text-muted hover:text-accent"}`}
          >
            DE
          </a>
          <a
            href={currentPath.replace(`/${lang}`, "/en")}
            class={`px-2 py-1 rounded transition-colors ${lang === "en" ? "bg-accent text-background" : "text-text-muted hover:text-accent"}`}
          >
            EN
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
